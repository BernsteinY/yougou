/**index.wxss**/
.container{
}
 .search{
    padding: 20rpx;
    background: #ff2d4a;
    width: 100%;
    box-sizing: border-box;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
  }

  .search-input{
    height: 60rpx;
    display:flex;
    justify-content: center;
    align-items: center;
    background: #fff;
    border-radius: 4px;
    font-size: 14px;
    color: #666;
    
  }
  .search-input icon{
    margin-right: 10px;
  }
  .slide-image{
     margin-top: 100rpx;
    width: 750rpx;
    height: 340rpx
  }
  .menus{
    display: flex;
    justify-content: space-around;
    padding: 20rpx 0;
  }
  .menus image{
    width: 128rpx;
    height:140rpx;
  }
  .floor{
    margin-top: 20rpx;
    width: 100%;
  }
  .floor .title image{
    width: 100%;
    height: 60rpx;
  }
  .floor .content{
    padding: 20rpx;
    display: flex;
    justify-content: space-between;
  }
  .floor-left image{
    width: 232rpx;
    height: 386rpx;
  }
  .floor-right{
    flex: 1;
    margin-left: 10rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .floor-right image{
    width: 232rpx;
    height: 188rpx;
  }